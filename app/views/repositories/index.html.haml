.table-responsive
  %table.table.table-bordered.table-hover
    %thead
      %tr
        %th Github Repository
        = sortable_header :median_close_time, title: "Median Time to Close an Issue"
        = sortable_header :issues_count, title: "Issues"
        = sortable_header :stargazers_count, title: "Stars"
        = sortable_header :forks_count, title: "Forks"
        = sortable_header :size
        = sortable_header :language
    %tbody
      - @reports.each do |report|
        %tr
          %td= link_to report.github_key, report_path(report)
          %td= distance_of_time_in_words report.median_close_time
          %td= report.issues_count
          %td= report.stars
          %td= report.forks
          %td= report.size
          %td= report.language

.text-center
  = will_paginate @reports, renderer: BootstrapPagination::Rails