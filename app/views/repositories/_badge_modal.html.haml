- badge_link = report_url(report, "svg")
- url = report_url(report)
#badge-modal-toggle{"data-toggle" => "modal", "data-target" => "#badge-modal"}
  = image_tag badge_link
#badge-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4.modal-title
          Add a badge to your README.
      .modal-body
        .text-center
          = image_tag badge_link
        %h4 HTML
        %p
          - value = "<a href=\"#{url}\"><img src=\"#{badge_link}\" /></a>"
          %input.form-control{type: "text", value: value}

        %h4 Markdown
        %p
          - value = "[![Issue Stats](#{badge_link})](#{url})"
          %input.form-control{type: "text", value: value}

        %h4 Textile
        %p
          - value = "\"!#{badge_link}!\":{url}"
          %input.form-control{type: "text", value: value}

        %h4 RDOC
        %p
          - value = "{<img src=\"#{badge_link}\" />}[#{url}]"
          %input.form-control{type: "text", value: value}

      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
        %button.btn.btn-primary{type: "button"} Save changes